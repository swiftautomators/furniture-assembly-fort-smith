---
/**
 * SEO Component for Furniture Assembly Fort Smith
 * Handles meta tags, Open Graph, and Schema.org markup
 */

interface Props {
  title: string;
  description: string;
  canonicalURL: string;
  ogImage?: string;
}

const {
  title,
  description,
  canonicalURL,
  ogImage = 'https://furnitureassemblyfortsmith.com/og-image.jpg' // Placeholder
} = Astro.props;

const siteURL = 'https://furnitureassemblyfortsmith.com';
const siteName = 'Furniture Assembly Fort Smith';
const businessPhone = '(479) 555-0123'; // Placeholder

// LocalBusiness Schema Markup
const schemaOrgJSONLD = {
  '@context': 'https://schema.org',
  '@type': 'HomeAndConstructionBusiness',
  'name': 'Furniture Assembly Fort Smith',
  'url': siteURL,
  'telephone': businessPhone,
  'address': {
    '@type': 'PostalAddress',
    'addressLocality': 'Fort Smith',
    'addressRegion': 'AR',
  },
  'areaServed': [
    {
      '@type': 'City',
      'name': 'Fort Smith',
      'sameAs': 'https://en.wikipedia.org/wiki/Fort_Smith,_Arkansas'
    },
    {
      '@type': 'City',
      'name': 'Van Buren',
      'sameAs': 'https://en.wikipedia.org/wiki/Van_Buren,_Arkansas'
    },
    {
      '@type': 'City',
      'name': 'Alma',
      'sameAs': 'https://en.wikipedia.org/wiki/Alma,_Arkansas'
    },
    {
      '@type': 'City',
      'name': 'Greenwood',
      'sameAs': 'https://en.wikipedia.org/wiki/Greenwood,_Arkansas'
    }
  ],
  'description': "Fort Smith's only dedicated furniture assembly specialist. Transparent flat-rate pricing. Local reliability. 100% satisfaction guaranteed.",
  'priceRange': '$$',
  'image': ogImage,
  'aggregateRating': {
    '@type': 'AggregateRating',
    'ratingValue': '5.0',
    'reviewCount': '10'
  }
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:site_name" content={siteName} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

<!-- Additional SEO Meta Tags -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="author" content={siteName} />

<!-- Schema.org LocalBusiness Markup -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(schemaOrgJSONLD)} />
