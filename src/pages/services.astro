<style>
  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, #34495e 100%);
    color: var(--color-white);
    padding: 4rem 0;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.75rem;
    margin-bottom: 1.5rem;
    color: var(--color-white);
    line-height: 1.2;
  }

  .intro {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--color-accent);
    max-width: 900px;
    margin: 0 auto;
  }

  /* Section Styles */
  section {
    padding: 4rem 0;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-primary);
  }

  /* Service Categories */
  .service-categories {
    background-color: var(--color-white);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
  }

  .category-card {
    background-color: var(--color-accent);
    padding: 2.5rem;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
  }

  .category-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .category-card h3 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .category-description {
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .category-card h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
    font-weight: 600;
  }

  .items-list {
    list-style: none;
    padding-left: 0;
  }

  .items-list li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--color-text);
    line-height: 1.5;
  }

  .items-list li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: 700;
  }

  /* Our Process */
  .our-process {
    background-color: var(--color-accent);
  }

  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
    margin-top: 2rem;
  }

  .process-step {
    text-align: center;
  }

  .step-number {
    width: 80px;
    height: 80px;
    background-color: var(--color-secondary);
    color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 auto 1.5rem;
    font-family: var(--font-heading);
  }

  .process-step h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .process-step p {
    color: var(--color-text);
    line-height: 1.6;
  }

  /* Brands Section */
  .brands-section {
    background-color: var(--color-white);
  }

  .brands-intro {
    text-align: center;
    font-size: 1.1rem;
    color: var(--color-text);
    margin-bottom: 3rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .brands-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .brand-item {
    background-color: var(--color-accent);
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .brand-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .brand-name {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .brand-item p {
    color: var(--color-text);
    font-size: 0.95rem;
    line-height: 1.4;
  }

  .brands-footer {
    text-align: center;
    font-size: 1.1rem;
    color: var(--color-text);
    margin-top: 2rem;
  }

  .brands-footer a {
    color: var(--color-secondary);
    font-weight: 600;
  }

  .brands-footer a:hover {
    text-decoration: underline;
  }

  /* CTA Section */
  .services-cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, #34495e 100%);
    color: var(--color-white);
    text-align: center;
    padding: 5rem 0;
  }

  .services-cta h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-white);
  }

  .services-cta > .container > p {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    color: var(--color-accent);
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .cta-primary {
    background-color: var(--color-secondary);
    color: var(--color-white);
    padding: 1rem 2.5rem;
    border-radius: 5px;
    font-size: 1.2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }

  .cta-primary:hover {
    background-color: #16a085;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    color: var(--color-white);
  }

  .cta-secondary {
    background-color: transparent;
    color: var(--color-white);
    padding: 1rem 2.5rem;
    border: 2px solid var(--color-white);
    border-radius: 5px;
    font-size: 1.2rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .cta-secondary:hover {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .phone-icon {
    font-size: 1.3rem;
  }

  .guarantee {
    font-size: 1rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .intro {
      font-size: 1.1rem;
    }

    section {
      padding: 3rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .category-card {
      padding: 2rem;
    }

    .process-steps,
    .brands-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
      font-size: 1rem;
      padding: 0.875rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .page-header h1 {
      font-size: 1.75rem;
    }

    .intro {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .category-card h3 {
      font-size: 1.5rem;
    }

    .services-cta h2 {
      font-size: 2rem;
    }
  }
</style>
