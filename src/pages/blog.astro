---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts
const allPosts = await getCollection('blog');

// Sort posts by date (newest first)
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Format date helper
function formatDate(date: Date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout
  title="Blog | Furniture Assembly Fort Smith - Tips & Insights"
  description="Expert furniture assembly tips, guides, and insights from Fort Smith's trusted furniture assembly professionals. Learn about assembly costs, preparation tips, and furniture care."
>
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>Furniture Assembly Tips & Insights</h1>
      <p class="intro">
        Expert advice, helpful guides, and insider knowledge from your local Fort Smith furniture assembly professionals.
      </p>
    </div>
  </section>

  <!-- Blog Posts Section -->
  <section class="blog-posts">
    <div class="container">
      {sortedPosts.length > 0 ? (
        <div class="posts-grid">
          {sortedPosts.map((post) => (
            <article class="post-card">
              {post.data.heroImage && (
                <div class="post-image">
                  <img src={post.data.heroImage} alt={post.data.title} />
                </div>
              )}
              <div class="post-content">
                <div class="post-meta">
                  <span class="post-date">{formatDate(post.data.pubDate)}</span>
                  <span class="post-author">By {post.data.author}</span>
                </div>
                <h2 class="post-title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                <p class="post-description">{post.data.description}</p>
                <a href={`/blog/${post.slug}`} class="read-more">
                  Read More ‚Üí
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="no-posts">
          <div class="no-posts-icon">üìù</div>
          <h2>Our Blog is Coming Soon!</h2>
          <p>
            We're working on creating helpful articles about furniture assembly, preparation tips, cost-saving strategies, and more.
          </p>
          <p>
            Check back soon for expert insights from your local Fort Smith furniture assembly professionals!
          </p>
          <div class="cta-section">
            <p><strong>In the meantime, have questions about furniture assembly?</strong></p>
            <a href="/contact" class="cta-button">Contact Us</a>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Signup (Optional future enhancement) -->
  <section class="blog-cta">
    <div class="container">
      <h2>Need Furniture Assembly Help?</h2>
      <p>Don't struggle with confusing instructions and missing parts. Let the experts handle it!</p>
      <div class="cta-buttons">
        <a href="/pricing" class="cta-primary">Get Instant Quote</a>
        <a href="tel:+14795550123" class="cta-secondary">
          <span class="phone-icon">üìû</span>
          Call: (479) 555-0123
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, #34495e 100%);
    color: var(--color-white);
    padding: 4rem 0;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.75rem;
    margin-bottom: 1.5rem;
    color: var(--color-white);
    line-height: 1.2;
  }

  .intro {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--color-accent);
    max-width: 800px;
    margin: 0 auto;
  }

  /* Blog Posts Section */
  .blog-posts {
    padding: 4rem 0;
    background-color: var(--color-white);
    min-height: 400px;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .post-card {
    background-color: var(--color-accent);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
  }

  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-primary);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--color-text);
  }

  .post-date,
  .post-author {
    display: flex;
    align-items: center;
  }

  .post-date::before {
    content: "üìÖ";
    margin-right: 0.5rem;
  }

  .post-author::before {
    content: "‚úçÔ∏è";
    margin-right: 0.5rem;
  }

  .post-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--color-primary);
    transition: color 0.3s ease;
  }

  .post-title a:hover {
    color: var(--color-secondary);
  }

  .post-description {
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .read-more {
    color: var(--color-secondary);
    font-weight: 600;
    font-size: 1.05rem;
    align-self: flex-start;
    transition: color 0.3s ease;
  }

  .read-more:hover {
    color: var(--color-primary);
  }

  /* No Posts State */
  .no-posts {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    padding: 4rem 2rem;
  }

  .no-posts-icon {
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  .no-posts h2 {
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .no-posts p {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  .cta-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--color-accent);
  }

  .cta-section p {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .cta-button {
    display: inline-block;
    background-color: var(--color-secondary);
    color: var(--color-white);
    padding: 1rem 2.5rem;
    border-radius: 5px;
    font-size: 1.2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .cta-button:hover {
    background-color: #16a085;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    color: var(--color-white);
  }

  /* Blog CTA Section */
  .blog-cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, #34495e 100%);
    color: var(--color-white);
    text-align: center;
    padding: 5rem 0;
  }

  .blog-cta h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-white);
  }

  .blog-cta > .container > p {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    color: var(--color-accent);
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-primary {
    background-color: var(--color-secondary);
    color: var(--color-white);
    padding: 1rem 2.5rem;
    border-radius: 5px;
    font-size: 1.2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }

  .cta-primary:hover {
    background-color: #16a085;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    color: var(--color-white);
  }

  .cta-secondary {
    background-color: transparent;
    color: var(--color-white);
    padding: 1rem 2.5rem;
    border: 2px solid var(--color-white);
    border-radius: 5px;
    font-size: 1.2rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .cta-secondary:hover {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .phone-icon {
    font-size: 1.3rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .intro {
      font-size: 1.1rem;
    }

    .blog-posts {
      padding: 3rem 0;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .no-posts {
      padding: 3rem 1.5rem;
    }

    .no-posts h2 {
      font-size: 2rem;
    }

    .no-posts p {
      font-size: 1.1rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
      font-size: 1rem;
      padding: 0.875rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .page-header h1 {
      font-size: 1.75rem;
    }

    .intro {
      font-size: 1rem;
    }

    .no-posts-icon {
      font-size: 4rem;
    }

    .no-posts h2 {
      font-size: 1.75rem;
    }

    .blog-cta h2 {
      font-size: 2rem;
    }
  }
</style>
